<p id="notice"><%= notice %></p>


<p>
  <strong>Name:</strong>
  <%= @resource.name %>
</p>

<p>
  <strong>Last Updated: </strong>
  <%= @resource.updated_at %>
</p>

<p>
  <strong>Description:</strong>
  <%= @resource.description %>
</p>

<p>
  <strong>Link:</strong>
  <%= link_to @resource.link, @resource.link %>
</p>

<p>
  <strong>Logo:</strong>
  <img src="<%= @resource.img_url %>" height="42" width="42"/>
</p>

<p>
  <strong>Week:</strong>
  <%= @resource.week %>
</p>


<p>
  <strong>User:</strong>
  <%= @resource.user.name %>
</p>

<p>
  <strong><label for="comments"> Comments: </label></strong>
  <ul>

  <% @comments.each do |comment| %>
  <li><%= comment.content %> - <%= comment.user.first_name %> </li>
  <% end %>

  <button><%= link_to "Add New Comment", new_comment_path(:linked_resource => @resource.id) %></button>
  </ul>
</p>



<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', resources_path %> |
