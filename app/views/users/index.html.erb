<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Cohort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.cohort.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if !current_user %>
  <%= link_to 'Sign Up!', new_user_path %>
<% end %>
